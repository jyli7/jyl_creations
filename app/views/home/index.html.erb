<header class="main-header">
	<div class="sixteen columns alpha">
		<ul class="menu">
			<li class="menu-item"><%= link_to "JYL Creations", root_path, {class: 'logo'} %></li>
			<li class="menu-item"><%= link_to "Work", '#' %></li>
			<li class="menu-item"><%= link_to "About", '#' %></li>
			<li class="menu-item"><%= link_to "Writing", '#' %></li>
			<li class="menu-item"><%= link_to "Project Inquiry", '#' %></li>
		</ul>
	</div>
</header>

<div class="work-items">
	<% @items.each do |item| %>
		<article>
			<h3><%= item[:name] %></h3>
			<div class="work-item">
				<a href="<%= item[:link]%>"><img src=<%= "/assets/#{item[:image]}" %> class="work-img"></a>
			</div>
		</article>
	<% end %>

</div>