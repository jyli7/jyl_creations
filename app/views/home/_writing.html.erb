<h3> Recent Posts </h3>
<% posts.each do |post| %>
	<div class="post-index-item">
		<div class="post-last-update"><%= post.display_time.strftime("%b %d, %Y") %></div>
		&mdash;
		<%= link_to post.title, post_path(post.slug), class: 'post-link' %>
		<% if post.slug == 'learning-to-code-the-roadmap-i-wish-i-had-been-given' %>
			<span>*</span>
		<% end %>
	</div>
<% end %>
<span class="num-views">(*) Has received over 50,000 page views</span>