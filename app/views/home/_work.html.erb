<h2>Work</h2>

<ul class="work-filters">
	<li class="active"><a href="#" data-filter="all">All</a></li> 
	<li><a href="#" data-filter="work">Work Experience</a></li> 
	<li><a href="#" data-filter="client">Clients</a></li> 
	<li><a href="#" data-filter="open">Open Source</a></li> 
</ul>

<div class="work-wrapper">
	<% items.each do |item| %>
		<article class="work-item-container all <%= item[:type] %>">
			<div class="work-item <% if item[:image] == 'pivotal_labs.png'%>pivotal-labs-item<% end %>">
				<a href="<%= item[:link]%>"><img src=<%= "/assets/#{item[:image]}" %> class="work-img"></a>
			</div>
			<div class="work-item-description">
				<div class="description">
					<div class="work-item-name"><%= item[:name] %>.</div>
					<%= item[:description] %>
				</div>
			</div>
		</article>
	<% end %>
</div>